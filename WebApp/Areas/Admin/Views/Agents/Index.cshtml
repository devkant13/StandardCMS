@model IEnumerable<StandardCMS.DB.Models.Agent>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParentAgent)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            @foreach (var item in Model)
            {

                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ParentAgent.AgentId)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.AgentId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.AgentId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.AgentId">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
